mixin form-change-multi-rb(path)
  form.col-6(
    action=path
    method='POST'
    form-change-multi
  )
    .d-flex.align-items-start.gap-2
      .form-group
        select(name='type' class="form-select" aria-label="Disabled select example")
          option(disable selected) --Choose Action--
          option(value='In Stock') In Stock
          option(value='Low Stock') Low Stock
          option(value='restore-all') Restore All
      .form-group.d-none
        input(
          type='text'
          name='ids'
          value=''
        )
      button(type='submit' class='btn btn-primary') Apply